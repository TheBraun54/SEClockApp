<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEClockApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout>
                <ImageButton Source="gear.png" Clicked="SettingsClicked" WidthRequest="100" HorizontalOptions="Start"/>
                <ImageButton Source="musicbutton.png" Clicked="MusicClicked" WidthRequest="100" HorizontalOptions="End"/>
            </HorizontalStackLayout>

            <TimePicker></TimePicker>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
