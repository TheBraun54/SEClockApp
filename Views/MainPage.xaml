<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEClockApp.MainPage"
             Title="Timer"
             BackgroundColor="#C2BBF0">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center">

            <TimePicker
                FontSize="150"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            
            <HorizontalStackLayout
                HorizontalOptions="Center">
                <Label Text="Timer" FontSize="50" FontAttributes="Bold" Margin="15"/>
                <Switch x:Name="alarmTimer" ThumbColor="Black" OnColor="WhiteSmoke" Margin="15"/>
                <Label Text="Alarm" FontSize="50" FontAttributes="Bold" Margin="15"/>
            </HorizontalStackLayout>

            <Button FontSize="30"
                    WidthRequest="400"
                    Text="Start"
                    Clicked="StartClock"></Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
