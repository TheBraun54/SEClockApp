<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SEClockApp.Player"
             Title="Player">

    <VerticalStackLayout>
        <Label x:Name="Display"
               BindingContext="{x:Reference Name=picker}"
               Text="{Binding Path=Time}"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="0,200,0,0" />

        <HorizontalStackLayout HorizontalOptions="Center">
            <TimePicker x:Name="picker"
                        Margin="0,20,0,100" />
        </HorizontalStackLayout>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Button x:Name="stopButton"
                    Text="Stop"
                    Clicked="Stop"
                    HeightRequest="100"
                    WidthRequest="100"
                    Margin="0,0,120,0"
                    CornerRadius="50" />

            <Button x:Name="PauseButton"
                    Text="Pause"
                    Clicked="Pause"
                    HeightRequest="100"
                    WidthRequest="100"
                    Margin="120,0,0,0"
                    CornerRadius="50" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>