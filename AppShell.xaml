<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="SEClockApp.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:SEClockApp"
       Shell.FlyoutBehavior="Disabled"
       TabBarBackgroundColor="#C2BBF0">

    <TabBar
        >
        <Tab Icon="clock.png" Title="Timer">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Icon="gear.png" Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate local:Settings}" />
        </Tab>
        <Tab Icon="spotify.png" Title="Spotify">
            <ShellContent ContentTemplate="{DataTemplate local:Spotify}" />
        </Tab>
        <Tab Icon="youtube.png" Title="Youtube">
            <ShellContent ContentTemplate="{DataTemplate local:Youtube}" />
        </Tab>
        <Tab Icon="folder.png" Title="Local Drive">
            <ShellContent ContentTemplate="{DataTemplate local:Local}" />
        </Tab>
    </TabBar>
</Shell>
